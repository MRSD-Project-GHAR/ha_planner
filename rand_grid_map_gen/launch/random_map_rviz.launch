<launch>

  <node pkg="rand_grid_map_gen" type="map_gen_pub_node" name="random_map_publisher" output="screen" >
    <rosparam command="load" file="$(find rand_grid_map_gen)/cfg/map_params.yaml" />
    <param name="yaml_file_name" value="$(find rand_grid_map_gen)/cfg/" />
  </node>

  <node pkg="grid_map_demos" type="filters_demo" name="grid_map_filter" output="screen">
    <!-- Input topic -->
  	<param name="input_topic" value="/random_map_publisher/dummy_map" />
  	<!-- Output topic -->
  	<param name="output_topic" value="dummy_filtered_map" />
  	<!-- Load grid map filter chain configuration -->
    <rosparam command="load" file="$(find rand_grid_map_gen)/cfg/filters_demo_filter_chain_experiment.yaml" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rand_grid_map_gen)/rviz/grid_map_visualization.rviz" />

</launch>